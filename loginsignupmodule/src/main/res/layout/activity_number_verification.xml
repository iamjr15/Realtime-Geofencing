<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="callback"
            type="com.autohub.loginsignup.student.NumberVerificationActivity" />
    </data>

    <RelativeLayout
        android:background="@android:color/white"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnNext">

            <LinearLayout
                android:id="@+id/pin_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="72dp"
                android:layout_marginRight="14dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvEnterOtp"
                    style="@style/verify_you"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="100dp"

                    android:text="@string/verify_number" />

                <LinearLayout
                    android:id="@+id/llPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="29dp"
                    android:background="@drawable/shadow_rect"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/codePicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:ccp_autoDetectCountry="true"
                        app:ccp_autoDetectLanguage="true"
                        app:ccp_rememberLastSelection="true"
                        app:ccp_showFlag="true"
                        app:ccp_showNameCode="false"
                        app:ccp_textSize="20sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/black" />

                    <EditText
                        android:id="@+id/etPhoneNumber"
                        style="@style/Subhead"
                        android:layout_width="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="start|center_vertical"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:textAlignment="viewStart"
                        tools:ignore="Autofill" />

                    <ImageButton
                        android:id="@+id/btngetotp"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="12dp"
                        android:background="@color/white"
                        android:src="@drawable/welcome_next"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <com.goodiebag.pinview.Pinview
                    android:id="@+id/pinView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="31dp"
                    android:visibility="gone"
                    app:cursorVisible="true"
                    app:forceKeyboard="true"
                    app:hint=""
                    app:inputType="number"
                    app:password="false"
                    app:pinBackground="@drawable/border_circle"
                    app:pinHeight="45dp"
                    app:pinLength="6"
                    app:pinWidth="45dp"
                    app:splitWidth="7dp"
                    app:textSize="7sp"
                    tools:ignore="SmallSp" />

                <Button
                    android:id="@+id/btnResendCode"
                    style="@style/resend_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="26dp"
                    android:background="@drawable/round_rect_drawable"
                    android:gravity="center"
                    android:onClick="@{()->callback.onResendClick()}"
                    android:paddingStart="70dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="70dp"
                    android:paddingBottom="6dp"
                    android:text="@string/resend_code"
                    android:visibility="gone" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btnNext"
            style="@style/btnnext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/nextbtnbg_drawable"
            android:gravity="end|center_vertical"
            android:onClick="@{()->callback.onNextClick()}"
            android:text="@string/next"
            android:visibility="gone" />
    </RelativeLayout>
</layout>
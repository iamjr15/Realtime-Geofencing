<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.FrameActivity">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/bg_window</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Text style for "welcome_on" -->
    <style name="welcome_on_board">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">33sp</item>
    </style>

    <style name="s_">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="s_small">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">bottom|left</item>
    </style>

    <style name="login">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">29sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="welcome_back">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="item_header_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="academics2">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="select_the_class">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="class_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="next">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="signup_hint_small_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="adding_a_d">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>


    <!-- Text style for "enter_your" -->
    <style name="enter_your_phonenum">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Text style for "enter_the_" -->
    <style name="enter_the_otp">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">27sp</item>
    </style>

    <!-- Text style for "resend_cod" -->
    <style name="resend_code">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Text style for "next" -->
    <style name="otp_next">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Text style for "i'm_a..." -->
    <style name="i_am_a">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">45sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="signup_title_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">29sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="signup_second_title_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="signup_general_hint_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="forgot_pass">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Text style for "male" -->
    <style name="sex">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="note_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="title_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="package_item_text_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="tab_item_text_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="hey_user_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="home_stats_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="home_stats_value_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="home_feed_text_style">
        <item name="android:textColor">#ffe55353</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="hey_student_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">80sp</item>
    </style>

    <style name="hey_student_name_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">54sp</item>
    </style>

    <style name="hey_student_lets_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">35sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="signup_student_jack_style">
        <item name="android:textColor">@color/blue_jack</item>
        <item name="android:textSize">19sp</item>
    </style>


    <style name="Heading" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/cera_pro_bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Subhead" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BodyText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SmallText" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonNext">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@drawable/button_background_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>

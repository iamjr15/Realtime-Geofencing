<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="vertical">

        <RelativeLayout
            android:id="@+id/rly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_purple_blue"
            android:paddingBottom="64dp">

            <ImageView
                android:id="@+id/fimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:contentDescription="@string/content_description"
                android:src="@drawable/ic_flash" />

            <TextView
                android:id="@+id/tvNewReq"
                style="@style/Heading"
                android:layout_below="@id/fimg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="NEW REQUEST RECEIVED"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <android.support.v7.widget.CardView
                android:id="@+id/cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvNewReq"
                android:layout_margin="16dp"
                android:background="@color/white"
                android:paddingBottom="4dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_picture"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:contentDescription="@string/content_description"
                            android:src="@drawable/default_pic" />

                        <TextView
                            android:id="@+id/name"
                            style="@style/Heading"
                            android:layout_margin="8dp"
                            android:text="Muhammad Imran"
                            android:textAllCaps="true"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#756C6C" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/subject"
                            style="@style/Heading"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="PHYSICS"
                            android:textAllCaps="true"
                            android:textSize="13sp" />

                        <View
                            android:layout_width="0.6dp"
                            android:layout_height="38dp"
                            android:layout_gravity="center"
                            android:layout_weight="0.01"
                            android:background="#756C6C"
                            android:foregroundGravity="center" />

                        <TextView
                            android:id="@+id/group"
                            style="@style/Heading"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="GROUP CLASSES"
                            android:textAllCaps="true"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#756C6C" />

                    <TextView
                        android:id="@+id/rate"
                        style="@style/Heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:text="FEES: RS.4000 / MONTH"
                        android:textAllCaps="true"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#756C6C" />

                    <TextView
                        android:id="@+id/payment_method"
                        style="@style/Heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:text="PAYMENT METHOD:CASH"
                        android:textAllCaps="true"
                        android:textSize="13sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <Button
                android:id="@+id/contact_std"
                style="@style/Heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv"
                android:layout_gravity="center"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/selector_white_round"
                android:paddingStart="64dp"
                android:paddingLeft="64dp"
                android:paddingRight="64dp"
                android:text="@string/contact_student"
                android:textAlignment="center"
                android:textSize="14sp" />

            <Button
                android:id="@+id/add_batch"
                style="@style/Heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/contact_std"
                android:layout_gravity="center"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/selector_white_round"
                android:paddingStart="64dp"
                android:paddingLeft="64dp"
                android:paddingRight="64dp"
                android:text="@string/add_to_batch"
                android:textSize="14sp" />

            <TextView
                style="@style/Heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_batch"
                android:layout_gravity="center_vertical|end"
                android:layout_margin="16dp"
                android:gravity="center"
                android:text="@string/request_message"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="13sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/delete_request"
            style="@style/Heading"
            android:layout_height="56dp"
            android:background="@drawable/selector_white_round_blue_bordered"
            android:gravity="center"
            android:minWidth="220dp"
            android:text="@string/delete_request"
            android:textSize="17sp"
            app:layout_anchor="@id/rly"
            app:layout_anchorGravity="bottom|center_horizontal" />

    </android.support.design.widget.CoordinatorLayout>
</layout>
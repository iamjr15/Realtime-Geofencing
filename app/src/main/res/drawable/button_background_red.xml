<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="0" android:centerColor="#D1102C" android:endColor="#D1102C" android:startColor="#C42A3F" android:type="linear" android:useLevel="false" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="0" android:centerColor="#D1102C" android:endColor="#D1102C" android:startColor="#C42A3F" android:type="linear" android:useLevel="false" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="0" android:centerColor="#ffec1432" android:endColor="#ffec1432" android:startColor="#ffe8364e" android:type="linear" android:useLevel="false" />
        </shape>
    </item>
</selector>
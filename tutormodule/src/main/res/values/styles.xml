<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.FrameActivity">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/bg_window</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="Heading" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/cera_pro_bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>



    <style name="text_style_semi_bold">
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>

    </style>

    <style name="text_style">
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">17sp</item>
    </style>


    <style name="text_style_bold">
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/lightBlue</item>
    </style>

        <style name="already_go">
            <item name="android:textColor">#ffffffff</item>
            <item name="android:textSize">17sp</item>
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textStyle">bold</item>
        </style>


        <style name="click_to_a">
            <item name="android:textColor">#ffffffff</item>
            <item name="android:textSize">14sp</item>
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textStyle">bold</item>
        </style>

        <!-- Text style for "welcome_on" -->
        <!-- Add this snippet to styles.xml. -->
        <style name="welcome_on">
            <item name="android:textColor">#ff000000</item>
            <item name="android:textSize">33sp</item>
            <item name="android:textStyle">bold</item>
        </style>
        <!-- Text style for "hey_there_" -->
        <!-- Add this snippet to styles.xml. -->
        <style name="hey_there_">
            <item name="android:textColor">#ff000000</item>
            <item name="android:textSize">19sp</item>
            <item name="android:textStyle">bold</item>

        </style>

        <!-- Text style for "login" -->
        <!-- Add this snippet to styles.xml. -->
        <style name="onboard_login">
            <item name="android:textColor">#ffffffff</item>
            <item name="android:textSize">25sp</item>
        </style>

        <!-- Text style for "signup" -->
        <!-- Add this snippet to styles.xml. -->
        <style name="onboard_signup">
            <item name="android:textColor">#ffffffff</item>
            <item name="android:textSize">25sp</item>
        </style>

    <style name="tab_item_text_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="tab_style">
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>

    </style>

    </resources>

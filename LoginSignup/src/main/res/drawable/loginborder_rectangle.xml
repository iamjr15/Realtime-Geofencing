<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Style for "rectangle_" -->
    <!-- Add this snippet to layer-list xml in drawable. -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <size android:width="134dp" android:height="37dp" />
            <solid android:color="#ffed0681" />
        </shape>

    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffffff" />
            <size android:width="134dp" android:height="37dp" />
            <item android:name="android:shadowColor">#29000000</item>
            <!-- TextView shadow offsets do not respect scale. -->
            <item android:name="android:shadowDx">0</item>
            <item android:name="android:shadowDy">8</item>
        </shape>

    </item>
</selector>




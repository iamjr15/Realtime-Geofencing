<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:background="@android:color/white"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_picture"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="13dp"
                android:contentDescription="@string/content_description"
                android:src="@drawable/default_pic" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/searchimage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="17dp"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@+id/rr"
                android:src="@drawable/search" />

            <RelativeLayout
                android:id="@+id/rr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="17dp"
                android:layout_marginRight="9dp"
                android:background="@drawable/gradesfilterbg_drawable">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinner"
                    style="@style/mySpinnerItemStyle"
                    android:layout_width="74dp"
                    android:layout_height="23dp"
                    android:layout_centerInParent="true"

                    android:textAlignment="center" />

                <RelativeLayout
                    android:layout_width="76dp"
                    android:layout_height="24dp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txtgrade"
                        style="@style/grade"
                        android:layout_width="76dp"
                        android:layout_height="24dp"
                        android:background="@drawable/gradesfilterbg_drawable"
                        android:clickable="false"
                        android:descendantFocusability="beforeDescendants"
                        android:drawableRight="@drawable/downarrowsmall"
                        android:focusable="false"
                        android:gravity="center"
                        android:paddingRight="8dp"
                        android:text="grade 8"
                        android:textColor="@android:color/white"

                        />
                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/compass"

                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textlocation"
                style="@style/avenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:text="4th Avenue, Los Angeles" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/changeaddress"
                style="@style/change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="4dp"
                android:text="change" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rrempty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/defaultimg"
                android:layout_width="267dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/foggnocomment" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/you_haven"
                android:layout_width="223dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/defaultimg"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/no_tutor_is_available" />
        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/turorsrecycleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="28dp"
            android:orientation="horizontal" />
    </LinearLayout>


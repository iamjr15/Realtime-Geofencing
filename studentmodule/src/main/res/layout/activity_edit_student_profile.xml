<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="callback"
            type="com.netzwelt.studentmodule.activities.EditStudentProfileActivity" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:background="@android:color/white"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView

                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="profile"
                android:textAllCaps="true"
                android:textSize="19sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:text="edit details"
                android:textAllCaps="true"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_gravity="center_horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_picture"
                    android:layout_width="105dp"
                    android:layout_height="105dp"

                    android:layout_marginTop="14dp"

                    android:src="@drawable/dummyexploreimage" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/ic_circle_white" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="4dp"
                    android:onClick="@{() -> callback.onAddPicture()}"
                    android:src="@drawable/ic_imageedit" />
            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="22dp"
                android:layout_marginRight="14dp"
                android:text="Name"
                android:textAllCaps="true"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/edt_back"

                android:paddingBottom="@dimen/_2dp">

                <EditText
                    android:id="@+id/edtFirstName"
                    android:layout_width="match_parent"

                    android:layout_height="48dp"
                    android:layout_gravity="center|start"
                    android:background="@null"
                    android:hint="John"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:singleLine="true" />

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="14dp"
                android:text="password"
                android:textAllCaps="true"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/edt_back"

                android:paddingTop="@dimen/_2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="4dp"

                        android:layout_toLeftOf="@+id/show_hide_password"
                        android:background="@null"
                        android:hint="QUERTY1234"
                        android:paddingLeft="16dp"
                        android:singleLine="true" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/show_hide_password"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:onClick="@{() -> callback.showHidePass()}"
                        android:text="hide"
                        android:textAllCaps="true"
                        android:textStyle="bold" />

                </RelativeLayout>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="14dp"
                android:text="contact number"
                android:textAllCaps="true"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/llPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="11dp"

                android:layout_marginEnd="6dp"
                android:background="@drawable/edt_back"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/codePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_autoDetectLanguage="true"
                    app:ccp_rememberLastSelection="true"
                    app:ccp_showFlag="true"
                    app:ccp_showNameCode="false"
                    app:ccp_textSize="20sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="14dp"
                    android:layout_marginBottom="14dp"
                    android:background="@color/black" />

                <EditText
                    android:id="@+id/etPhoneNumber"
                    style="@style/Subhead"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="start|center_vertical"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:textAlignment="viewStart" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="14dp"
                android:text="current grade"
                android:textAllCaps="true"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="11dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/edt_back"
                android:paddingBottom="@dimen/_2dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/grade"
                    style="@style/autoscroll"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:drawableEnd="@drawable/arrow_right"
                    android:drawableRight="@drawable/arrow_right"
                    android:drawablePadding="8dp"
                    android:gravity="center|start"

                    android:onClick="@{() -> callback.showGrade()}"
                    android:paddingStart="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="8th grade"
                    android:textAllCaps="true" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="14dp"
                android:text="favourite subject"
                android:textAllCaps="true"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/favoriteSubjCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="11dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/edt_back"
                android:onClick="@{() -> callback.showSub(false)}"

                android:paddingBottom="@dimen/_2dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/favoriteSubj"
                    style="@style/autoscroll"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:drawableRight="@drawable/arrow_right"
                    android:drawablePadding="8dp"
                    android:gravity="center|start"
                    android:paddingStart="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="math"
                    android:textAllCaps="true" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="14dp"
                android:text="least favourite subject"
                android:textAllCaps="true"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/leastFavuSubjCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="11dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/edt_back"
                android:onClick="@{() -> callback.showSub(true)}"

                android:paddingBottom="@dimen/_2dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/leastFavuSubj"
                    style="@style/autoscroll"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:drawableRight="@drawable/arrow_right"
                    android:drawablePadding="8dp"
                    android:gravity="center|start"
                    android:paddingStart="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="physics"
                    android:textAllCaps="true" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="14dp"
                android:text="favourite hobby"
                android:textAllCaps="true"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/favHobbyCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/edt_back"
                android:onClick="@{() -> callback.showHobby()}"

                android:paddingBottom="@dimen/_2dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/favHobby"
                    style="@style/autoscroll"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:drawableRight="@drawable/arrow_right"
                    android:drawablePadding="8dp"
                    android:gravity="center|start"
                    android:paddingStart="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="math"
                    android:textAllCaps="true" />

            </LinearLayout>


            <Button
                android:id="@+id/updateProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="36dp"
                android:layout_marginRight="64dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/selector_black"
                android:onClick="@{() -> callback.makeSaveRequest()}"
                android:text="update"

                android:textColor="@color/white"
                android:textSize="21sp" />

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</layout>